{
    "variables":
    {
      "cpu": "1",
      "ram": "512",
      "name": "alpine",
      "disk_size": "8000",
      "version": "9.3",
      "iso_checksum_type": "sha256",
      "iso_urls": "http://dl-cdn.alpinelinux.org/alpine/v3.9/releases/x86_64/alpine-standard-3.9.3-x86_64.iso",
      "iso_checksum": "6e28c5c902ccb6db24596dfb6a1c255c7989d0b9be4e92e87a8eff523201a459",
      "headless": "false",
      "config_file": "setup-alpine.sh",
      "ssh_username": "root",
      "ssh_password": "testtest",
      "destination_server": "get.goffinet.org"
    },
  "builders": [
    {
      "name": "{{user `name`}}{{user `version`}}",
      "type": "qemu",
      "format": "qcow2",
      "accelerator": "kvm",
      "qemu_binary": "/usr/bin/qemu-system-x86_64",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_cache": "none",
      "qemuargs": [[ "-m", "{{user `ram`}}M" ],[ "-smp", "{{user `cpu`}}" ]],
      "ssh_wait_timeout": "30m",
      "http_directory": "http",
      "http_port_min": 10082,
      "http_port_max": 10089,
      "ssh_host_port_min": 2222,
      "ssh_host_port_max": 2229,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "iso_urls": "{{user `iso_urls`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_wait": "60s",
      "boot_command": [
        "root<enter><wait>",
        "ip link set eth0 up && udhcpc -i eth0 &&<enter>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/http/{{user `config_file`}} &&<enter>",
        "chmod +x {{user `config_file`}} && ./{{user `config_file`}}<enter>"
      ],
      "disk_size": "{{user `disk_size`}}",
      "disk_discard": "unmap",
      "disk_compression": true,
      "headless": "{{user `headless`}}",
      "http_directory": ".",
      "shutdown_command": "/sbin/poweroff",
      "output_directory": "artifacts/qemu/{{user `name`}}{{user `version`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apk add ansible"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "ansible/playbook.yml",
      "playbook_dir": "ansible"
    },
    {
      "type": "shell",
      "inline": [
        "apk del ansible"
      ]
    }
  ]
}
